<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/projecttextcolor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

        <item name="android:color">#D86F6F</item>// You can change thickness here.

    </style>
    <style name="Divider.Horizontal2" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.
        <item name="android:color">#D65B5B</item>// You can change thickness here.

    </style>

    <style name="HiddenTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
